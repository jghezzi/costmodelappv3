= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :action
    = f.select :action, ["Activate", "Deactivate"]

  .field
    = f.hidden_field :action_date, value: Date.today
  .actions
    = f.submit 'Save'
